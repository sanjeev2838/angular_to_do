<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, :placeholder => "Email address", :class => "form-control"%></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password ,:placeholder => "Password", :class => "form-control"%></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation,:placeholder => "Password confirmation", :class => "form-control" %></div>

  <div><%= f.submit "Sign up", :class => "btn btn-lg btn-primary btn-block" %></div>
<% end %>

<%= render "devise/shared/links" %>
